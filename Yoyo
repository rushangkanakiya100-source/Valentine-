    <canvas id="confetti"></canvas>

    <script>
        let heartsFound = 0;
        const totalHearts = 5;
        const scoreDisplay = document.getElementById('score');
        const modal = document.getElementById('proposal-modal');
        const noBtn = document.getElementById('btn-no');

        // State to track found hearts to prevent double counting
        const foundHearts = new Set();

        // Reveal Logic (Counts as finding)
        function revealHeart(heartId) {
            const heart = document.getElementById(heartId);

            // If valid heart and not already found/counted
            if (heart && !foundHearts.has(heartId)) {
                foundHearts.add(heartId); // Mark as found
                heart.classList.add('revealed');

                // Increment Score immediately
                heartsFound++;
                scoreDisplay.textContent = `${heartsFound} / ${totalHearts}`;

                // Check Win Condition
                if (heartsFound === totalHearts) {
                    setTimeout(() => {
                        modal.style.display = 'flex';
                    }, 1500); // Slightly longer delay to let them see the last heart
                }
            }
        }

        function collectHeart(element) {
            // This function is now just for fun/cleanup (clicking the heart itself)
            // It doesn't affect the score since reveal handled it.

            if (element.style.pointerEvents === 'none') return;
            element.style.pointerEvents = 'none';
            element.classList.remove('revealed');

            // Animation
            element.classList.add('found-anim');
        }

        // "No" button dodge logic
        function dodgeButton() {
            const maxX = 200;
            const maxY = 100;
            const minX = -200;
            const minY = -100;

            const randomX = Math.random() * (maxX - minX) + minX;
            const randomY = Math.random() * (maxY - minY) + minY;

            noBtn.style.transform = `translate(${randomX}px, ${randomY}px)`;
        }

        function acceptProposal() {
            const form = document.getElementById('proposal-form');
            if (form.action.includes("your@email.com")) {
                // Just for demo, normally we wouldn't show this
            }
            form.submit();

            // 2. Hide modal, show celebration
            modal.style.display = 'none';
            document.getElementById('game-ui').style.display = 'none';
            // document.querySelector('.scene').style.filter = 'blur(5px)'; // Removed blur for clear background, overlay handles it

            const celebration = document.getElementById('celebration');
            celebration.style.display = 'flex'; // Changed to flex for centering

            document.getElementById('confetti').style.display = 'block';

            startConfetti();
        }

        /* --- Confetti Logic (Simple Implementation) --- */
        const canvas = document.getElementById('confetti');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const pieces = [];
        const colors = ['#f00', '#0f0', '#00f', '#ff0', '#0ff', '#f0f', '#FF69B4'];

        function startConfetti() {
            for (let i = 0; i < 300; i++) {
                pieces.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height - canvas.height,
                    w: Math.random() * 10 + 5,
                    h: Math.random() * 10 + 5,
                    color: colors[Math.floor(Math.random() * colors.length)],
                    speed: Math.random() * 5 + 2,
                    angle: Math.random() * 6.28
                });
            }
            animateConfetti();
        }

        function animateConfetti() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            pieces.forEach(p => {
                p.y += p.speed;
                p.x += Math.sin(p.angle) * 2;
                p.angle += 0.1;
                if (p.y > canvas.height) p.y = -20;

                ctx.fillStyle = p.color;
                ctx.fillRect(p.x, p.y, p.w, p.h);
            });
            requestAnimationFrame(animateConfetti);
        }

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

    </script>
</body>

